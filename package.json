    "next": "^13.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-instantsearch-hooks-web": "^6.44.0",
    "react-markdown": "^8.0.7",
    "react-pdf": "^5.7.2",
    "react-syntax-highlighter": "^15.5.0",
    "recoil": "^0.7.6",
    "remark-gfm": "^3.0.1",
    "sharp": "^0.31.3"
  },
  "devDependencies": {
    "@types/node": "16.11.10",
    "@types/react": "17.0.37",
    "@types/react-pdf": "^5.0.9",
    "@types/react-syntax-highlighter": "^15.5.6",
    "autoprefixer": "^10.4.0",
