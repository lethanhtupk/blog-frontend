{
  "name": "blog-frontend",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint-fix": "next lint --cache --fix",
    "ts-check": "tsc --noemit",
    "prepare": "husky install"
  },
  "dependencies": {
    "@headlessui/react": "^1.6.6",
    "@heroicons/react": "^1.0.6",
    "date-fns": "^2.29.1",
    "firebase": "^9.8.3",
    "next": "^12.3.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-pdf": "^5.7.2",
    "sharp": "^0.31.1"
  },
  "devDependencies": {
    "@types/node": "16.11.10",
    "@types/react": "17.0.37",
    "@types/react-pdf": "^5.0.9",
    "autoprefixer": "^10.4.0",
    "eslint": "7",
    "eslint-config-next": "12.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "postcss": "^8.4.4",
    "prettier": "^2.5.0",
    "tailwindcss": "^3.1.7",
    "typescript": "4.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "bash -c 'yarn ts-check'",
      "bash -c 'yarn lint-fix'"
    ]
  }
