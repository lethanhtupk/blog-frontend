    "next-auth": "^4.19.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-pdf": "^5.7.2",
    "recoil": "^0.7.6",
    "sharp": "^0.31.1"
  },
  "devDependencies": {
    "@types/node": "16.11.10",
    "@types/react": "17.0.37",
    "@types/react-pdf": "^5.0.9",
    "autoprefixer": "^10.4.0",
    "eslint": "7",
    "eslint-config-next": "^13.1.6",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "postcss": "^8.4.4",
    "prettier": "^2.5.0",
    "tailwindcss": "^3.1.7",
    "typescript": "4.5.2"
  },
  "husky": {
    "hooks": {
